{
    "name": "dpc-sdp/tide_api",
    "description": "Content API for Tide distribution.",
    "type": "drupal-module",
    "license": "GPL-2.0+",
    "require": {
        "drupal/jsonapi": "2.0-rc1",
        "drupal/jsonapi_extras": "^2.5",
        "drupal/schemata": "1.0-alpha2",
        "drupal/openapi": "1.0-alpha1",
        "dpc-sdp/tide_core": "@dev"
    },
    "require-dev": {
        "dpc-sdp/tide_test": "@dev"
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/jsonapi": {
                "Add a revision id negotiation plugin to support entity revisions - https://www.drupal.org/project/jsonapi/issues/2992833": "https://www.drupal.org/files/issues/2018-10-26/2992833-186.patch"
            },
            "drupal/jsonapi_extras": {
                "Date Time enhancer does not work with Date range fields - https://www.drupal.org/project/jsonapi_extras/issues/2953227": "https://www.drupal.org/files/issues/2018-07-17/jsonapi_extras-date-range-fields-support-2953227-d8-11.patch"
            }
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "platform": {
            "php": "7.1"
        },
        "process-timeout": 0,
        "sort-packages": true
    }
}
